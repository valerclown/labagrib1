<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee webapp_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>labaservl.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>data-servlet</servlet-name>
        <servlet-class>labaservl.DatabaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/my-login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>data-servlet</servlet-name>
        <url-pattern>/my-data</url-pattern>
    </servlet-mapping>
</web-app>
